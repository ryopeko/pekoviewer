= form_for @tweet do |f|
  - if @tweet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tweet.errors.count, "error")} prohibited this tweet from being saved:"
      %ul
        - @tweet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :tweet_id
    = f.text_field :tweet_id
  .field
    = f.label :screen_name
    = f.text_field :screen_name
  .field
    = f.label :tweet_text
    = f.text_area :tweet_text
  .field
    = f.label :deleted
    = f.check_box :deleted
  .actions
    = f.submit 'Save'
